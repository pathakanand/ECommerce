<% layout('layout/boilerplate') %>
<%- include('../partials/navbar') %>

<div class="row">
    <div class="col-6 mx-auto">
    <form action="/products/<%= foundProduct._id %>?_method=PATCH" method="POST">
        <div class="mb-3">
        <label for="name">Name:</label><br>
        <input type="text" name="name" id="name" value="<%= foundProduct.name %>"><br>
        </div>

        <div class="mb-3">
        <label for="image">Image:</label><br>
        <input type="text" name="image" id="image" value="<%= foundProduct.image%>"><br>
        </div>

        <div class="mb-3">
        <label for="price">Price:</label><br>
        <input type="text" name="price" id="price" value="<%= foundProduct.price %>"><br>
        </div>

        <div class="mb-3">
        <label for="description">description:</label><br>
        <textarea name="description" id="description" cols="30" rows="10"><%= foundProduct.description %></textarea>
<br>
        </div>
        <button class="btn btn-sm btn-success">Edit Product</button>

    </form>
    </div>
</div>
</body>
</html>